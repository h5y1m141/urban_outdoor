<section class="wrapper">
  <div class="col-sm-9 clear-float">
    <h2>ログイン</h2>
    <%= render partial: 'shared/flash_alert', locals: { flash: flash} %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-control') do |f| %>
      <div class="field">
        <%= f.label :email %>
        <br/>
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <br/>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me, class: 'form-control' %>
          <%= f.label :remember_me, 'Rember Me' %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "ログイン", class: 'form-control col-xs-1' %>
      </div>
    <% end %>
  </div>
</section>
